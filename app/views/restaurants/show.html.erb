<h1>
  <%= @restaurant.name %>
</h1>

<div>
  <%= link_to(restaurants_path) do %>
    <i class="fa fa-list"></i> Back to List
  <% end %>
</div>

<%= image_tag "http://maps.googleapis.com/maps/api/staticmap?zoom=15&size=400x300&sensor=false&maptype=roadmap&markers=color:red|#{@restaurant.address}" %>

<h2 id="reviews-counter">
  <%= pluralize @restaurant.reviews.size, "review" %>
</h2>

<div id="reviews">
  <% if @restaurant.reviews.blank? %>
    Be the first to leave a review for <%= @restaurant.name %>
  <% else %>
    <% @restaurant.reviews.each do |review| %>
      <%= render 'reviews/show', review: review %>
    <% end %>
  <% end %>
</div>

<%= render 'reviews/form', restaurant: @restaurant, review: @review %>
